{
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
    // "source.organizeImports": "explicit" //this line is used to remove all of the useless imports by default
  },
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "tailwindCSS.experimental.classRegex": [
    ["cva\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"],
    ["cx\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"]
  ],
  "workbench.colorCustomizations": {
    "activityBar.activeBackground": "#383838",
    "activityBar.background": "#383838",
    "activityBar.foreground": "#e7e7e7",
    "activityBar.inactiveForeground": "#e7e7e799",
    "activityBarBadge.background": "#787828",
    "activityBarBadge.foreground": "#e7e7e7",
    "commandCenter.border": "#e7e7e799",
    "sash.hoverBorder": "#383838",
    "statusBar.background": "#1f1f1f",
    "statusBar.foreground": "#e7e7e7",
    "statusBarItem.hoverBackground": "#383838",
    "statusBarItem.remoteBackground": "#1f1f1f",
    "statusBarItem.remoteForeground": "#e7e7e7",
    "titleBar.activeBackground": "#1f1f1f",
    "titleBar.activeForeground": "#e7e7e7",
    "titleBar.inactiveBackground": "#1f1f1f99",
    "titleBar.inactiveForeground": "#e7e7e799"
  },
  "peacock.color": "#1F1F1F"
}
