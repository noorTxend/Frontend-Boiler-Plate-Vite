{
    "env": {
      "browser": true,
      "es2021": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:react/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "plugins": ["@typescript-eslint", "react"],
    "rules": {
      "@typescript-eslint/no-explicit-any": "off",
      "react/prop-types": "off", // Turn off prop-types rule since we use TypeScript for type checking
      "@typescript-eslint/no-unused-vars": "off"
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  }
  